<p class="pageHeader">New Engineer</p>

<form action="/engineers" method="post">

    <label for="firstName">First name:</label>
    <input id="firstName" class="inputbox" type="text" name="firstName" required="true" placeholder="Enter first name">

    <label for="lastName">Last name:</label>
    <input id="lastName" class="inputbox" type="text" name="lastName" required="true"placeholder="Enter last name">

    <label for="department">Department:</label>
    <select name="department" id="department">
        #foreach($department in $departments)
        <option value="$department.getId()">$department.getTitle()</option>
        #end
    </select>

    <label for="salary">Salary:</label>
    <input type="number" id="salary" class="inputbox" name="salary" required="true"placeholder="Enter salary">

    <input type="submit" value="Save" class="button"></input>

</form>